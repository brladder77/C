#include <stdio.h>
#include <string.h>

int main() {

	char str[30], * p;
	printf("문자열을 입력하시오 : ");
	p = str;
	gets_s(str);

	int i, len;
	len = strlen(str);

	for (i = len; i >= 0; i--) {
		printf("%c", *(p+i));
	}
	
	for (i = 0; i <= len; i++) {
		if (*p == ' ') {
			sum++;
		}
		p++;
	}
	printf("단어의 개수는 %d 입니다.\n ", sum);	

	return 0;
}

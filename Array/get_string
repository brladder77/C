#include <stdio.h>
#include <string.h>

int main() {

	int len, mid;
	char* p, str[30];
  
	printf("문자열을 입력하시오 : ");
	gets_s(str); //문자열 받는거 익히기
  
	p = str;
  
	len = strlen(str);   //이거 외워두자 많이 쓰인다
	mid = int(len / 2);
	
  if (len % 2 == 1) {
		p = p + mid;
		printf("%c", *p);
	}
	else {
		p = p + mid - 1;
		printf("%c %c", *p, *(p + 1));
	}
  return 0;
}

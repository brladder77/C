#include <stdio.h>

int main() {

	int i, j, a;
  
	for (i = 1; i <= 5; i++) {
		for (j = 1; j <= 5 - i; j++)
			printf(" ");
      
		for (a = 1; a <= i; a++)
			printf("$");
      
		printf("\n");
	}
  return 0;
}
